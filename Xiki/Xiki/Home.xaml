<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xiki.Home">
    <ContentPage.Content>
        <StackLayout>


            <Label Text="Logga in i Xiki" HorizontalOptions="Center"></Label>

            <Entry x:Name="entryPassword" Placeholder="Användarnamn" />
            <Entry x:Name="entryUsername" Placeholder="Lösenord" IsPassword="True" />
            <Button Text="Logga in" Clicked="Signin_Button"></Button>

            <Image Source="https://xamarin.com/content/images/pages/forms/example-app.png"></Image>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>